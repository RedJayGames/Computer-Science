import java.text.NumberFormat;
import java.util.Scanner;


public class CollegeFinances {

	public static void main(String[] args) {
		double P, r, n, A;
		
		//determining values for variables
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter the current cost of a college:");
		P = scan.nextDouble();
		P = P * 1.031 + P * Math.pow(1.031,2) + P * Math.pow(1.031, 3) + P * Math.pow(1.031,4);
		System.out.println("Enter the monthly interest rate:");
		r = scan.nextDouble();
		System.out.println("Enter the amount of months:");
		n = scan.nextInt();

		//Finds total cost to pay off loan
		A = (P * r) / (1 - Math.pow(1 + r, -n)) * n;
		NumberFormat money = NumberFormat.getCurrencyInstance();
		NumberFormat percent = NumberFormat.getPercentInstance();

		for(double years = n / 12, monthly = A / n, percentOfTotal = .20, loan = P * percentOfTotal; 
				percentOfTotal <= 1; percentOfTotal+=.2){
			
			//Finds total cost to pay off loan
			A = (loan * r) / (1 - Math.pow(1 + r, -n)) * n;
			
			System.out.println("For a " + money.format(P) + " loan (" + 
					percent.format(percentOfTotal) + " of the four-year cost) at " + 
					percent.format(r) + " interest with a payoff period of " + years + 
					" years, you would pay a total of " + money.format(A) + 
					", which is a monthly payment of " + money.format(monthly) + ".");
		}
		
	}
}
